/* BTK Akademi - C programlama Dili Kursu */
/**
 * Santimetre, metre ve kilometre birim çevrimlerinin
 * C programlama dilinde yapılması
 */
 #include <stdio.h>
 
 int main() {
     
     float cm , metre, km;
     /* ununluğu santimetre cinsinden al*/
     printf("Uzunluğu santimetre cinsinde giriniz:");
     scanf("%f", &cm);
     
     /* çevriö işemlerini gerçekleştir*/
     metre = cm / 100.0;
     km    = cm / 100000.0;
     
     printf("Metre cinsinden uzunluk = %.2f m \n", metre);
     printf("Kilometre cinsinden uzunluk = %.2f km", km);
    
     
    return 0;
}
