/* BTK Akademi - C Programlama Dili Kursu */
/** 
 * İç içe geçmiş koşullu ifadeler ile sayı 
 * karşılaştırma işlemlerinin yapılması */
 
#include <stdio.h>

int main ()
{
    int sayi1, sayi2, sayi3, maksimum;
    
    /* kullanıcıdan 3 sayı değeri al */
    printf("Lütfen 3 sayı değeri giriniz:");
    scanf("%d%d%d",&sayi1, &sayi2, &sayi3);
    
    if (sayi1>sayi2)
    {
        if(sayi1 >sayi3)
        {
            /*sayi1 > sayi2 ve sayi1 > sayi3 ise*/
            maksimum= sayi1;
        }
        else
        {
            /*sayi1 > sayi2,ancak sayi1 > sayi3 değilse*/
            maksimum= sayi3;
        }
    }
    else
    {
        if(sayi2 >sayi3)
        {
            /*sayi1> sayi2 değilse; ve sayi2> sayi3 ise*/
            maksimum =sayi2;
        }
        else
        {
            /*sayi1> sayi2 değilse ve sayi2> sayi3 değilse*/
            maksimum=sayi3;
        }
    }
    
    /*maksumum (en büyük) değeri yazdır*/
    printf("3 sayı içinden en bütük değer = %d", maksimum);
    
    return 0;
}
